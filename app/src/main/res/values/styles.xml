<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/homeBG</item>
        <item name="colorPrimary">@color/buttonTint</item>
        <item name="colorPrimaryDark">@color/homeBG</item>
        <item name="android:textColor">@color/buttonTint</item>
        <item name="actionMenuTextColor">@color/buttonTint</item>
        <item name="colorAccent">@color/buttonTint</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/homeBG</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
         <item name="android:textColor">@color/buttonTint</item>
        <item name="actionMenuTextColor">@color/buttonTint</item>
        <item name="android:background">@color/homeBG</item>
        <item name="android:backgroundTint">@color/homeBG</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/homeBG</item>
        <item name="android:backgroundTint">@color/homeBG</item>


    </style>




</resources>
